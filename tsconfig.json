{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,

    // Sugestões adicionais:
    "esModuleInterop": true, // facilita importações default
    "resolveJsonModule": true, // permite importar arquivos JSON
    "noUnusedLocals": true, // ajuda a limpar código
    "noUnusedParameters": true,

    "strict": true // ativa conjunto de regras mais rigorosas (pode ativar ou desativar conforme preferir)
  },
  "exclude": ["node_modules", "dist"]
}
